<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@null"
    android:orientation="vertical"
    android:padding="2dp">

    <TextView
        android:id="@+id/textView_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="dayInfo"
        android:fontFamily="@font/nanum_square_ac_r"
        android:textStyle="normal"
        android:textSize="17dp"
        android:textColor="#ffffff"
        android:letterSpacing="-0.04"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_income"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:paddingBottom="0dp"
        android:gravity="right|bottom"
        android:text="income"
        android:textColor="@color/income"
        android:textSize="10dp"
        android:fontFamily="@font/nanum_square_ac_b"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/textView_expense"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView_expense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:gravity="right|top"
        android:text="expense"
        android:textColor="@color/expense"
        android:textSize="10dp"
        android:fontFamily="@font/nanum_square_ac_b"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>