<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_round">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="카테고리"
            android:theme="@style/BlackMediumText" />

        <Spinner
            android:id="@+id/spinner_detail_cat"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:entries="@array/spinnerDetailMain"
            android:theme="@style/BlackMediumText" />/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_detail_subcat"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="세부 카테고리"
            android:theme="@style/BlackMediumText" />

        <Spinner
            android:id="@+id/spinner_detail_subcat"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:theme="@style/BlackMediumText" />/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="내역명"
            android:theme="@style/BlackMediumText" />

        <EditText
            android:id="@+id/editText_specName"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="bottom"
            android:inputType="text"
            android:theme="@style/BlackMediumText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="가격"
            android:theme="@style/BlackMediumText" />

        <EditText
            android:id="@+id/editText_specPrice"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="bottom"
            android:inputType="number"
            android:theme="@style/BlackMediumText" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_margin="15dp"
        android:background="@drawable/date_select_button">

        <Button
            android:id="@+id/button_detail_register"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="등록"
            android:background="@null"
            android:theme="@style/ConfirmButtonText" />

        <Button
            android:id="@+id/button_detail_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="취소"
            android:background="@null"
            android:theme="@style/ConfirmButtonText" />
    </LinearLayout>

</LinearLayout>