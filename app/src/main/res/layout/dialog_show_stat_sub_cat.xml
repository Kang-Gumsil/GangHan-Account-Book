<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_round">

    <!-- 메인 카테고리 조회 -->
    <TextView
        android:id="@+id/textView_cat_main"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:gravity="center"
        android:text="dd 카테고리"
        android:fontFamily="@font/nanum_square_ac_b"
        android:textStyle="normal"
        android:textSize="20dp"
        android:textColor="@color/textColor"
        android:letterSpacing="0.02"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!-- end of 메인 카테고리 조회 -->

    <!-- 리스트 바 -->
    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="24dp"
        android:paddingHorizontal="15dp"
        android:background="@drawable/stats_category_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_cat_main" >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:fontFamily="@font/nanum_square_ac_r"
            android:textStyle="normal"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:letterSpacing="0.02"
            android:text="카테고리" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:fontFamily="@font/nanum_square_ac_r"
            android:textStyle="normal"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:letterSpacing="0.02"
            android:text="비율" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:fontFamily="@font/nanum_square_ac_r"
            android:textStyle="normal"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:letterSpacing="0.02"
            android:text="총액" />
    </LinearLayout>
    <!-- end of 리스트 바 -->

    <!-- 리스트 내용 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="135dp"
        android:layout_marginHorizontal="20dp"
        android:paddingHorizontal="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout1"
        android:background="@drawable/view_stat_list" />
    <!-- end of 리스트 내용 -->

    <!-- 확인 버튼 -->
    <Button
        android:id="@+id/button_ok"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/popup_button"
        android:text="확인"
        android:fontFamily="@font/nanum_square_ac_r"
        android:textStyle="normal"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:letterSpacing="0.02"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView" />
    <!-- end of 확인 버튼 -->




</androidx.constraintlayout.widget.ConstraintLayout>