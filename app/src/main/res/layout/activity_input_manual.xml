<?xml version="1.0" encoding="utf-8"?>
<!-- 등록 화면 - 직접 입력 -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputManualActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- 내역 추가 제목 및 닫기 버튼 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/pinkGray"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:paddingLeft="15dp"
                android:text="내역 추가"
                android:textColor="@color/textColor"
                android:textSize="27sp" />

            <ImageButton
                android:id="@+id/imageButton_close"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#00FFFFFF"
                android:padding="20dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/icon_close" />

        </LinearLayout>

        <!-- 내역 입력하는 뷰들 담고 있는 레이아웃 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="40dp"
            android:orientation="vertical"
            >

            <!-- 분류(수입/지출) 선택 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:text="분류"
                    android:textColor="@color/textColor"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/button_income"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="2"
                    android:background="#00FFFFFF"
                    android:text="수입"
                    android:textColor="@color/textColor"/>

                <Button
                    android:id="@+id/button_spend"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:background="#00FFFFFF"
                    android:text="지출"
                    android:textColor="@color/textColor"/>

            </LinearLayout>

            <!-- 금액 입력 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical|left"
                    android:text="금액"
                    android:textColor="@color/textColor"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/editText_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:ems="9"
                    android:gravity="right"
                    android:inputType="number"
                    android:textColor="@color/textColor"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="원"
                    android:textColor="@color/textColor"
                    android:layout_gravity="right|center_vertical"
                    android:gravity="right"
                    android:textSize="20sp" />
            </LinearLayout>

            <!-- 거래처 입력 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical|left"
                    android:text="거래처"
                    android:textColor="@color/textColor"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/editText_place"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:ems="10"
                    android:gravity="right"
                    android:inputType="text"
                    android:textColor="@color/textColor"
                    android:privateImeOptions="defaultInputmode=korean"
                    android:textSize="20sp" />
            </LinearLayout>

            <!-- 지출 선택 시 메인 카테고리 선택 -->
            <LinearLayout
                android:id="@+id/layout_cat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical|left"
                    android:text="카테고리"
                    android:textColor="@color/textColor"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/spinner_cat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:entries="@array/spinnerMain" />

            </LinearLayout>

            <!-- 세부 카테고리 선택 (메인 카테고리가 "식비"/"쇼핑"인 경우에만 나타남) -->
            <LinearLayout
                android:id="@+id/layout_subcat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:text="세부 선택"
                    android:textColor="@color/textColor"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/spinner_subcat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"/>

            </LinearLayout>

            <!-- 날짜 선택 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical|left"
                    android:text="날짜"
                    android:textColor="@color/textColor"
                    android:textSize="20sp" />

                <!-- 프레임레이아웃 써서 날짜 나타내는 텍스트뷰와 다이얼로그 띄우는 버튼 중첩되도록 함 -->
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00000000" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/textView_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:textSize="17sp"
                            android:layout_weight="1"
                            android:text="yyyy년 MM월 dd일 (EEE) HH:mm" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- 세부 내역 등록 : 카테고리가 다중인 경우에만 나타남 -->
        <LinearLayout
            android:id="@+id/layout_specDetail"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:gravity="center_horizontal"
            android:paddingTop="15dp"
            android:paddingBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:visibility="invisible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:paddingHorizontal="10dp"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="3"
                    android:background="@color/pinkGray"
                    android:gravity="left|center_vertical"
                    android:text="카테고리"
                    android:textColor="@color/textColor"
                    android:textSize="12sp" />

                <TextView
                    android:paddingHorizontal="10dp"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="3"
                    android:background="@color/pinkGray"
                    android:gravity="left|center_vertical"
                    android:text="제품명"
                    android:textColor="@color/textColor"
                    android:textSize="12sp" />

                <TextView
                    android:paddingHorizontal="10dp"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="2"
                    android:background="@color/pinkGray"
                    android:gravity="right|center_vertical"
                    android:text="가격"
                    android:textColor="@color/textColor"
                    android:textSize="12sp" />
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <Button
                        android:id="@+id/button_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="추가" />

                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/button_register"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@color/pinkGray"
                android:text="등록"
                android:textColor="@color/textColor"/>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
